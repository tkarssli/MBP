<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anony.mybudgetpal" >

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.LoadingSplash"
            android:label="@string/title_activity_loading_splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CreateBudget"
            android:label="@string/title_activity_create_budget" >
        </activity>
        <activity
            android:name=".activities.AddExpense"
            android:label="@string/title_activity_add_expense" >
        </activity>
        <activity
            android:name=".activities.Welcome"
            android:label="@string/title_activity_welcome" >
        </activity>
    </application>

</manifest>
