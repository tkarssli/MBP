<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#f1f8e9"
    tools:context="com.anony.mybudgetpal.activities.Welcome">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34dp"
        android:text="Welcome"
        android:id="@+id/welcome_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:textColor="@color/dark_green"/>

    <com.anony.mybudgetpal.ui.RobotoTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To help you better manage your budget, we need to ask you exactly two questions."
        android:id="@+id/welcome_paragraph1"
        android:layout_below="@+id/welcome_title"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textSize="16dp"
        android:bufferType="spannable"
        android:alpha=".87"/>

    <com.anony.mybudgetpal.ui.RobotoTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='You can always change your answers later by going to "Budget" in the main menu.'
        android:id="@+id/welcome_paragraph2"
        android:layout_below="@+id/welcome_paragraph1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textSize="16dp"
        android:bufferType="spannable"
        android:alpha=".87"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:id="@+id/welcome_continueButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onWelcomeContinueButtonClicked"
        />
</RelativeLayout>
